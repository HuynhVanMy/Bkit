package bai03;

import java.text.DecimalFormat;

public class QuanLyGiaoDich {

	private String maGiaoDich;
	private String ngayGiaoDich;
	private double donGia;
	private int soLuong;
	private String loaiVang;
	private double tiGia;
	private String loaiTienTe;
	private double thanhTien;

	public QuanLyGiaoDich() {
		// TODO Auto-generated constructor stub
	}

	public QuanLyGiaoDich(String maGiaoDich, String ngayGiaoDich, double donGia, int soLuong, String loaiVang,
			double thanhTien) {
		this.maGiaoDich = maGiaoDich;
		this.ngayGiaoDich = ngayGiaoDich;
		this.donGia = donGia;
		this.soLuong = soLuong;
		this.loaiVang = loaiVang;
		this.thanhTien = thanhTien;
	}

	public QuanLyGiaoDich(String maGiaoDich, String ngayGiaoDich, double donGia, int soLuong, double tiGia,
			String loaiTienTe, double thanhTien) {
		this.maGiaoDich = maGiaoDich;
		this.ngayGiaoDich = ngayGiaoDich;
		this.donGia = donGia;
		this.soLuong = soLuong;
		this.tiGia = tiGia;
		this.loaiTienTe = loaiTienTe;
		this.thanhTien = thanhTien;
	}

	@Override
	public String toString() {
		DecimalFormat decimalFormat = new DecimalFormat("#,###.000");
		return "Mã giao dịch: " + maGiaoDich + "\t Ngày giao dịch: " + ngayGiaoDich + "\t Đơn giá: "
				+ decimalFormat.format(donGia) + "\t Số lượng: " + soLuong + "\t  Loại vàng: " + loaiVang
				+ "\t Thành tiền: " + decimalFormat.format(thanhTien);
	}

	public String toString02() {
		DecimalFormat decimalFormat = new DecimalFormat("#,###.000");
		return "Mã giao dịch: " + maGiaoDich + "\t Ngày giao dịch: " + ngayGiaoDich + "\t Đơn giá: "
				+ decimalFormat.format(donGia) + "\t Số lượng: " + soLuong + "\t Tỉ giá: " + tiGia + "\t Loại tiền tệ: "
				+ loaiTienTe + "\t Thành tiền: " + decimalFormat.format(thanhTien);
	}

	public String getMaGiaoDich() {
		return maGiaoDich;
	}

	public void setMaGiaoDich(String maGiaoDich) {
		this.maGiaoDich = maGiaoDich;
	}

	public String getNgayGiaoDich() {
		return ngayGiaoDich;
	}

	public void setNgayGiaoDich(String ngayGiaoDich) {
		this.ngayGiaoDich = ngayGiaoDich;
	}

	public double getDonGia() {
		return donGia;
	}

	public void setDonGia(double donGia) {
		this.donGia = donGia;
	}

	public int getsoLuong() {
		return soLuong;
	}

	public void setsoLuong(int soLuong) {
		this.soLuong = soLuong;
	}

	public String getLoaiVang() {
		return loaiVang;
	}

	public void setLoaiVang(String loaiVang) {
		this.loaiVang = loaiVang;
	}

	public double getTiGia() {
		return tiGia;
	}

	public void setTiGia(double tiGia) {
		this.tiGia = tiGia;
	}

	public String getLoaiTienTe() {
		return loaiTienTe;
	}

	public void setLoaiTienTe(String loaiTienTe) {
		this.loaiTienTe = loaiTienTe;
	}

	public double getThanhTien() {
		return thanhTien;
	}

	public void setThanhTien(double thanhTien) {
		this.thanhTien = thanhTien;
	}

}
