package nomvc;

public class Bai01 {
	public static void main(String[] args) {
		int n = 8;
		for (int i = 0; i <= n; i++) {
			for (int j = 0; j <= n; j++) {
				if(i==0||i== n){
					System.out.print("* ");
				}else if(j == i|| j == n-i){
					System.out.print("* ");
				}else{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
	}
}
