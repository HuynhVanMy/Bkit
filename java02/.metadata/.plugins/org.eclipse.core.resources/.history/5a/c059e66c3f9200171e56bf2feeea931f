package bai01;

public class TamGiacDoiDinh {

	public static void main(String[] args) {
		int n = 3;
		for (int i = 1; i < 2 * n; i++) {
			for (int j = 1; j < 2 * n; j++) {
				if (j <= i || j >= 2 * n - i) {
					System.out.print(j + " ");
				} else {
					System.out.print("  ");
				}
			}
			System.out.println();
		}
	}

}
